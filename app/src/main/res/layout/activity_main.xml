<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.aaronjeromemiller.volinode.MainActivity">

    <TextView
        android:id="@+id/text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sever Response"
        android:textSize="32sp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/button_red"
        android:textColor="@android:color/white"
        app:layout_constraintVertical_bias="0.177"/>

    <Button
        android:id="@+id/button_red"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Turn on red"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        android:layout_marginBottom="8dp"
        android:background="@android:color/holo_red_light"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/button_green"/>

    <Button
        android:id="@+id/button_green"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Turn on green"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        android:layout_marginBottom="8dp"
        android:background="@android:color/holo_green_light"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/button_blue"/>

    <Button
        android:id="@+id/button_blue"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Turn on blue"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        android:layout_marginBottom="8dp"
        android:background="@android:color/holo_blue_bright"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/button_off"/>

    <Button
        android:id="@+id/button_off"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="I have no purpose"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        android:layout_marginBottom="158dp"
        android:background="@android:color/darker_gray"
        android:textColor="@android:color/white"
        android:drawableRight="@color/colorPrimary"/>

</android.support.constraint.ConstraintLayout>
